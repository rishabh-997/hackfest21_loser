<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".HomeScreen.HomePageActivity">

    <LinearLayout
        android:id="@+id/bttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Brainy"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Brain cancer"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Aptos"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:gravity="center"
            android:text="Eye Blidness"
            android:textColor="@android:color/white"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/skin"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            android:gravity="center"
            android:text="Skin Cancer"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_brain"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/box_home"
        android:elevation="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/brain_clipart"
            android:layout_width="86dp"
            android:layout_height="158dp"
            android:layout_margin="12dp"
            android:src="@drawable/brain_clip"
            app:layout_constraintBottom_toTopOf="@id/proceed_brainapi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/proceed_brainapi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/box_green"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="PROCEED"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/brain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="36dp"
            android:text="Brain tumour"
            android:textAllCaps="true"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.241"
            app:layout_constraintLeft_toRightOf="@id/brain_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Accuracy : 96%"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintLeft_toRightOf="@id/brain_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brain_name" />

        <TextView
            android:id="@+id/brain_authenticity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Authenticity"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintLeft_toRightOf="@id/brain_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accuracy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_eye"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/box_home"
        android:elevation="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/eye_clipart"
            android:layout_width="86dp"
            android:layout_height="158dp"
            android:layout_margin="12dp"
            android:src="@drawable/eye_clip"
            app:layout_constraintBottom_toTopOf="@id/proceed_eyeapi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/proceed_eyeapi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/box_green"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="PROCEED"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView
            android:id="@+id/eye_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="36dp"
            android:text="Eye Blindness"
            android:textAllCaps="true"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.241"
            app:layout_constraintLeft_toRightOf="@id/eye_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accuracyeye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Accuracy : 94%"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintLeft_toRightOf="@id/eye_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eye_name" />


        <TextView
            android:id="@+id/eye_authenticity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Authenticity"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintLeft_toRightOf="@id/eye_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accuracyeye" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_skin"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/box_home"
        android:elevation="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/skin_clipart"
            android:layout_width="86dp"
            android:layout_height="158dp"
            android:layout_margin="12dp"
            android:src="@drawable/skinclip"
            app:layout_constraintBottom_toTopOf="@id/proceed_skinapi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/proceed_skinapi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/box_green"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="PROCEED"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView
            android:id="@+id/skin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="36dp"
            android:text="Skin Cancer"
            android:textAllCaps="true"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.241"
            app:layout_constraintLeft_toRightOf="@id/skin_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accuracy_skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Accuracy : 92%"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintLeft_toRightOf="@id/skin_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skin_name" />


        <TextView
            android:id="@+id/skin_authenticity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Authenticity"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.158"
            app:layout_constraintLeft_toRightOf="@id/skin_clipart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/accuracy_skin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>